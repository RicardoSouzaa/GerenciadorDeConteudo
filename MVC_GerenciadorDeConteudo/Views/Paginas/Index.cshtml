@{

    ViewBag.Title = "Paginas";
    List<Business.Pagina> paginas = ViewBag.Paginas;
}

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success">@TempData["sucesso"]</div>
}
@if (TempData["erro"] != null)
{
    <div class="alert alert-danger">@TempData["erro"]</div>
}

<div>
    <h3>Paginas</h3>
    <div>
        <a href="/paginas/novo" class="btn btn-default">Nova pagina</a>
    </div>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Data</th>
                <th>Render</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in paginas)
            {
                <tr>
                    <td width="20" align="center">@p.Id</td>
                    <td width="100" align="center">@p.Nome</td>
                    <td width="100" align="center">@p.Data.ToString("dd/MM/yyyy")</td>
                    <td width="100" align="center"><a href="/Paginas/Editar/@p.Id" class="btn btn-primary">Alterar Página</a></td>
                    <td width="100" align="center"><a href="/Paginas/visualizar/@p.Id" target="_blank" class="btn btn-warning">Vizualizar</a></td>
                    <td width="100" align="center"><a href="/Paginas/Excluir/@p.Id" class=" btn btn-danger" onclick="ValidaExclusao(@p.Id, event)">Excluir Página</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>
